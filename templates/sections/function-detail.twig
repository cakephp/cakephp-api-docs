<div class="section">
  <h2>{{ title|default('Method') }} Detail</h2>
  {% for function in functions %}
    <div class="method-detail">
      <a id="{{ function.name }}()"></a>
      <h3 class="method-name">
        {{ function.name }}()
        <a href="#{{ function.name }}()" class="permalink" title="Permalink to {{ function.name}}()">Â¶</a>

        {% if function.abstract %}
          <span class="label">abstract</span>
        {% endif %}

        <span class="label">{{ function.visibility }}</span>
        {% if function.static %}
          <span class="label">static</span>
        {% endif %}
        {% if function.annotated %}
          <span class="label annotation">@method</span>
        {% endif %}
        {% if function.doc.node.getDeprecatedTagValues() %}
          <span class="label">deprecated</span>
        {% endif %}
      </h3>

      <pre><code class="language-php">
        {{- function.name }}(
          {%- for parameter in function.parameters %}
            {{- parameter.type }} {% if parameter.variadic %}...{% endif %}${{ parameter.name }}{{ parameter.default is not null ? ' = ' ~ parameter.default : '' }}{{ loop.last?'':', ' }}
          {%- endfor -%}
        ){{ function.returnType ? ': ' ~ function.returnType : '' -}}
      </code></pre>

      <div class="description detailed">
        {{ function.doc.summary|markdown_to_html }}
        {{ function.doc.description|markdown_to_html }}

        {% if function.parameters %}
          <h6>Parameters</h6>
          <div class="parameter-list list">
          <dl>
            {% for parameter in function.parameters %}
              <dt>
                <code>{{ parameter.type ?? '' }}</code>
                {% if parameter.variadic %}...{% endif %}<var>${{ parameter.name }}</var>
                {% if parameter.default is not null %}
                  <span class="label">optional</span>
                {% endif %}
              </dt>
              <dd>{{ (parameter.description ?? '')|markdown_to_html }}</dd>
            {% endfor %}
          </dl>
          </div>
        {% endif %}

        {% if function.returnType %}
          <h6>Returns</h6>
          <div class="list">
            <code>{{ function.returnType }}</code><br>
            {# {{ (return.description ?? '')|markdown_to_html }} #}
          </div>
        {% endif %}

        {% if function.doc.node.getThrowsTagValues() %}
          <h6>Throws</h6>
          <div class="list">
            {% for tag in function.doc.node.getThrowsTagValues() %}
              <code>{{ tag.type }}</code><br>
              {{ tag.description }}{{ loop.last ? '' : '<br>' }}
            {% endfor %}
          </div>
        {% endif %}

        {% if function.doc.node.getTagsByName('@see') %}
          <h6>See Also</h6>
          <div class="list">
            {% for tag in function.doc.node.getTagsByName('@see') %}
              {{ tag.value.value }}</a>{{ loop.last ? '': '<br>' }}
            {% endfor %}
          </div>
        {% endif %}

        {% if function.doc.node.getTagsByName('@link') %}
          <h6>Links</h6>
          <div class="list">
            {% for tag in function.doc.node.getTagsByName('@link') %}
              {{ tag.value.value }}</a><br>{{ loop.last ? '' : '<br>' }}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>
